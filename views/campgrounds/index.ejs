      <% for (let campground of campgrounds){ %>
         <li><a href="/campgrounds/<%= campground.id %>"><%= campground.title %></a></li>
      <% } %>
     </ul> -->

  <% for (let campground of campgrounds){ %>
  <div class="card mb-3" >
    <div class="row">
      <img class="img-fluid col-md-4" src="<%= campground.image %>" alt="Card image cap">
    <div class="col-md-8">
      <div class="card-body ">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary">View <%= campground.title %></a>
      </div>
    </div>
  </div>
</div>
<% } %>
