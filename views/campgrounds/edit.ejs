<% layout('layout/boilerplate') %>
<div class="row">
  <h1 class="text-center" >Edit Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="val-form">
      <div class="form-group mt-2">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="title" value ="<%= campground.title %>" required>
      </div>
    <div class="form-group mt-2">
      <label for="location">Location</label>
      <input class="form-control" type="text" id="location" name="location" value = "<%= campground.location %>" required>
    </div>
    <div class="form-group mt-2">
      <label for="price">Price</label>
      <input class="form-control" type="number" id="price" name="price" value = "<%= campground.price %>" required>
    </div>
    <div class="form-group mt-2">
      <label for="price">Image</label>
      <input class="form-control" type="text" id="image" name="image" value = "<%= campground.image %>" required>
    </div>
    <div class="form-group mt-2">
      <label for="price">Description</label>
      <input class="form-control" type="text" id="description" name="description" value = "<%= campground.description %>" required>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary mt-2">Edit Campground</button>
    </div>
    </form>
  </div>
</div>
